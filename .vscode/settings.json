{
  "window.zoomLevel": -0.3,
  "editor.fontSize": 15,
  "editor.fontFamily": "Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "chat.editor.fontWeight": "100",
  "editor.fontWeight": "100",
  "editor.letterSpacing": -0.5,
  "editor.glyphMargin": false,

  "code-runner.clearPreviousOutput": true,
  "code-runner.runInTerminal": true,
  "code-runner.executorMap": {
    "javascript": "node",
    "typescript": "ts-node",
    "python": "cls; python -u",
    "java": "cd $dir && javac $fileName && java $fileNameWithoutExt",
    "c": "gcc $fileName -o $fileNameWithoutExt && ./$fileNameWithoutExt",
    "cpp": "g++ $fileName -o $fileNameWithoutExt && ./$fileNameWithoutExt"
  },

  "editor.minimap.enabled": false,
  "editor.mouseWheelZoom": true,
  "editor.formatOnSave": true,
  "explorer.compactFolders": false,

  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "GitHub Dark Default",

  // "debug.console.fontSize": 16,
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.fontFamily": "monospace",
  "workbench.activityBar.location": "hidden",

  "breadcrumbs.enabled": false,
  // "editor.lineNumbers": "off",
  "files.eol": "\n", // Final de linha sempre ser√° LF

  // üõ† Formata√ß√£o e Lint
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[xml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[svg]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ‚öñÔ∏è ESLint ‚Äì reduzir ru√≠do sem desligar qualidade
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  // Rebaixa regras mais barulhentas para "warn" no Problems
  "eslint.rules.customizations": [
    { "rule": "@typescript-eslint/no-unused-vars", "severity": "warn" },
    { "rule": "react-hooks/exhaustive-deps", "severity": "warn" }
  ],
  // Monorepo: direcione o ESLint para a pasta do frontend
  "eslint.workingDirectories": [
    { "directory": "./frontend", "changeProcessCWD": true }
  ]
}
